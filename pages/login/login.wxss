/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.login-from {
  margin: 25px;
  flex: auto;
  height: 100%;
  padding-top: 40px;
}

.inputView {
  background-color: #fff;
  line-height: 44px;
  border: 0.3px solid #cccccc;
}

/*输入框*/
.nameImage,
.keyImage {
  margin-left: 22px;
  width: 14px;
  height: 14px
}

.loginLab {
  margin: 15px 15px 15px 10px;
  color: #545454;
  font-size: 14px
}

.inputText {
  flex: block;
  float: right;
  text-align: left;
  margin-right: 22px;
  margin-top: 11px;
  color: #272323;
  font-size: 14px
}

.line {
  width: 100%;
  height: 0.2px;
  background-color: #cccccc;
  margin-top: 1px;
}

/*按钮*/
.loginBtnView {
  width: 100%;
  height: auto;
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}

.loginBtn {
  width: 100%;
  margin-top: 30px;
  background-color: #2d8cf0;
  color: #fff;
}

.registerBtn {
  width: 100%;
  margin-top: 5px;
}

.login-icon {
  flex: none;
}

.login-img {
  width: 750rpx;
}

.background {
  width: 100%;
  height: 100%;
}

image {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  position: relative;
}

.button {
  width: 45%;
  background-color: #fff;
  border: 1.5px solid #409EFF;
  color: #409EFF;
  font-weight: 550;
  position: absolute;
  bottom: 16%;
  left: 27.5%;
  border-radius: 50px;
}